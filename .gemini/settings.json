{
  "coreTools": [
    "run_shell_command",
    "google_web_search",
    "web_fetch"
  ],
  "sequential-thinking": {
    "command": "npx",
    "args": [
      "-y",
      "@modelcontextprotocol/server-sequential-thinking"
    ]
  },
  "mcpServers": {
    "serena": {
      "command": "bash",
      "args": [
        "scripts/start-serena-server.sh"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ]
    },
    "github": {
      "command": "bash",
      "args": [
        "scripts/start-github-mcp-server.sh"
      ]
    },
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ]
    },
    "mcp-compass": {
      "command": "npx",
      "args": [
        "-y",
        "@liuyoshio/mcp-compass"
      ]
    },
    "time": {
      "command": "uvx",
      "args": [
        "mcp-server-time",
        "--local-timezone=America/Sao_Paulo"
      ]
    },
    "language-server": {
      "command": "bash",
      "args": [
        "scripts/start-language-server.sh"
      ]
    }
  }
}